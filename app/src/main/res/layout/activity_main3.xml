<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3">


    <TextView
        android:id="@+id/send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="send code to whatsapp"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+91 8919787005"
        android:layout_below="@+id/send"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_whatsapp_24"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="60dp"/>
    <TextView
        android:id="@+id/send2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="use your number(+91 89***05) to send this"
        android:textColor="@color/black"
        android:layout_below="@id/number"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="20sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6-digit unicode in whatsapp"
        android:textColor="@color/black"
        android:layout_below="@id/send2"
        android:layout_centerHorizontal="true"
        android:textSize="20sp" />
    <EditText
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/send2"
        android:hint="0"
        android:textColorHint="@color/white"
        android:backgroundTint="@color/black"
        android:background="@color/black"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="180dp"
        android:textSize="20sp"
        android:textAlignment="center"/>
    <EditText
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/send2"
        android:hint="0"
        android:background="@color/black"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="100dp"
        android:textSize="20sp"
        android:textColorHint="@color/white"
        android:textAlignment="center"/>
    <EditText
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/send2"
        android:hint="0"
        android:background="@color/black"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="140dp"
        android:textSize="20sp"
        android:textColorHint="@color/white"
        android:textAlignment="center" />


    <EditText
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/send2"
        android:hint="0"
        android:textColorHint="@color/white"
        android:backgroundTint="@color/black"
        android:background="@color/black"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="220dp"
        android:textSize="20sp"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/wait"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:hint="waiting for your message"
        android:textColorHint="@color/white"
        android:backgroundTint="@color/black"
        android:layout_below="@id/send2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp"
        android:background="#52000000"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="yes open in whatsapp"
        android:backgroundTint="@color/teal_200"
        android:layout_below="@id/wait"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp" />





</RelativeLayout>